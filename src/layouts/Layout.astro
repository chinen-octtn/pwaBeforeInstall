---
import Nav from "../components/Nav.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="theme-color" content="#000" />
    <link rel="apple-touch-icon" href="icons/icon-192x192.png" />
    <link rel="manifest" href="/manifest.json" />
    <script src="/js/script.js" defer></script>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-X2STBJ68JG"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-X2STBJ68JG");
    </script>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
  }
  html {
    font-family: system-ui, sans-serif;
  }
  body {
    margin: 0;
    padding: 0;
  }
  main {
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: 1fr min(60rem, calc(100% - 2rem)) 1fr;
  }
  main > * {
    grid-column: 2;
  }
</style>
